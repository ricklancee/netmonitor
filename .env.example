# Network Monitor Configuration
# Copy this file to .env and fill in your values

# --- Network Detection (Required for home network detection) ---
HOME_ROUTER_IP=192.168.1.1
HOME_ROUTER_MAC=aa:bb:cc:dd:ee:ff

# --- Provider Information ---
PROVIDER=My ISP Name
VPN=off #if behind a VPN, set to 'on', else 'off'

# --- Ping Configuration ---
PING_COUNT=5
PING_TIMEOUT_MS=15000

# --- Ollama AI Analysis Configuration ---
# Set to 'true' to enable AI analysis with Ollama (requires Ollama to be running)
OLLAMA_ENABLED=true
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# --- Other  ---
DRY_RUN=false # won't create log entries if set to true
